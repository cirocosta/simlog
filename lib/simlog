'use strict';

// Requires
require('colors');

// Exports
exports.error = function(str) {
    console.error('[ERROR] '.red + str);
};

exports.warn = function(str) {
    console.warn('[WARNING] '.yellow + str);
};

exports.info = function(str) {
    console.info('[INFO] '.cyan + str);
};

exports.done = function(str) {
    console.log('[SUCCESS] '.green + str);
};
